{
  "manifest_version": 2,
  "name": "Popup",
  "version": "1.0.0",
  "description": "A minimal example of how to use npm modules from within a WebExtension.",
  "icons": {
    "32": "icons/leftpad-32.png"
  },
  "browser_action": {
    "default_icon": "icons/leftpad-32.png",
    "default_title": "Popup",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },
  "permissions": ["tabs"]
}
